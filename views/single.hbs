<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">{{title}} <span class="badge">{{priority}}</span></h3>
  </div>
  <div class="panel-body">
    {{description}}
  </div>
  <div class="panel-footer">
    {{date}}
  </div>
</div>
<form class="" action="/todo/{{id}}?_method=DELETE" method="post">

  <a href="/todo/{{id}}/edit" class="btn btn-warning" type="button" name="button">Edit</a>

  <button class="btn btn-success" type="submit" name="button">Complete</button>

  <a href="/todo" class="btn btn-primary"type="button" name="button">Go Back to TODOs</a>

</form>
